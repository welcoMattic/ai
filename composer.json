{
    "name": "php-llm/symfony-demo",
    "type": "project",
    "description": "Symfony Demo Chat Application",
    "license": "MIT",
    "require": {
        "php": ">=8.4",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "codewithkyrian/chromadb-php": "^0.3.0",
        "league/commonmark": "^2.7",
        "php-llm/llm-chain-bundle": "^0.20.2",
        "runtime/frankenphp-symfony": "^0.2.0",
        "symfony/asset": "7.2.*",
        "symfony/asset-mapper": "7.2.*",
        "symfony/clock": "7.2.*",
        "symfony/console": "7.2.*",
        "symfony/css-selector": "7.2.*",
        "symfony/dom-crawler": "7.2.*",
        "symfony/dotenv": "7.2.*",
        "symfony/flex": "^2.5",
        "symfony/framework-bundle": "7.2.*",
        "symfony/http-client": "7.2.*",
        "symfony/monolog-bundle": "^3.10",
        "symfony/runtime": "7.2.*",
        "symfony/twig-bundle": "7.2.*",
        "symfony/uid": "7.2.*",
        "symfony/ux-icons": "^2.24",
        "symfony/ux-live-component": "^2.24",
        "symfony/ux-turbo": "^2.24",
        "symfony/ux-typed": "^2.24",
        "symfony/yaml": "7.2.*",
        "twig/extra-bundle": "^3.21",
        "twig/markdown-extra": "^3.21",
        "twig/twig": "^3.21"
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-mbstring": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*",
        "symfony/polyfill-php82": "*",
        "symfony/polyfill-php83": "*",
        "symfony/polyfill-php84": "*"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "require-dev": {
        "nyholm/nsa": "^1.3",
        "php-cs-fixer/shim": "^3.75",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^11.5",
        "symfony/browser-kit": "7.2.*",
        "symfony/debug-bundle": "7.2.*",
        "symfony/stopwatch": "7.2.*",
        "symfony/web-profiler-bundle": "7.2.*"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "platform": {
            "php": "8.4.1"
        },
        "sort-packages": true
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "7.2.*"
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd",
            "importmap:install": "symfony-cmd"
        },
        "pipeline": [
            "composer validate --strict",
            "php -l src/**/*.php tests/**/*.php",
            "bin/console lint:twig templates",
            "bin/console lint:yaml config",
            "bin/console lint:container",
            "PHP_CS_FIXER_IGNORE_ENV=1 vendor/bin/php-cs-fixer fix --dry-run",
            "phpstan analyse",
            "XDEBUG_MODE=coverage vendor/bin/phpunit --coverage-html=coverage"
        ]
    }
}
