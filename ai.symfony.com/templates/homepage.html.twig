                            <div class="position-relative card-body p-3 p-lg-4 d-flex gap-3 align-items-start">
                                <div class="demo-icon bg-success bg-opacity-10 text-success flex-shrink-0">
                                    {{ ux_icon('tabler:crop', {width: 42, height: 42}) }}
