{
    "name": "symfony/ai-chat",
    "description": "PHP library for building chats with agents.",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "ai",
        "llm",
        "agent",
        "chat"
    ],
    "authors": [
        {
            "name": "Christopher Hertel",
            "email": "mail@christopher-hertel.de"
        },
        {
            "name": "Oskar Stark",
            "email": "oskarstark@googlemail.com"
        }
    ],
    "require": {
        "php": ">=8.2",
        "symfony/ai-agent": "@dev",
        "symfony/ai-platform": "@dev"
    },
    "require-dev": {
        "ext-redis": "*",
        "doctrine/dbal": "^3.3 || ^4.0",
        "mongodb/mongodb": "^1.21 || ^2.0",
        "phpstan/phpstan": "^2.0",
        "phpstan/phpstan-strict-rules": "^2.0",
        "phpunit/phpunit": "^11.5.13",
        "psr/cache": "^3.0",
        "symfony/clock": "^7.3|^8.0",
        "symfony/console": "^7.3|^8.0",
        "symfony/dependency-injection": "^7.3|^8.0",
        "symfony/http-foundation": "^7.3|^8.0",
        "symfony/serializer": "^7.3|^8.0"
    },
    "conflict": {
        "mongodb/mongodb": "<1.21"
    },
    "minimum-stability": "dev",
    "autoload": {
        "psr-4": {
            "Symfony\\AI\\Chat\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Symfony\\AI\\Chat\\Tests\\": "tests/",
            "Symfony\\AI\\PHPStan\\": "../../.phpstan/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-main": "0.x-dev"
        },
        "thanks": {
            "name": "symfony/ai",
            "url": "https://github.com/symfony/ai"
        }
    }
}
